package predio;

public class Elevador {
    private int andarAtual=8;
    public Elevador(int par, int par1) {
    }
    private int totalDeAndares=7;
    private int capacidade=5;
    private int qdp=6;
    public void Elevador() {
        this.capacidade=capacidade;
        this.totalDeAndares=totalDeAndares;
        }
        public boolean  entra() {
            if(this.qdp<this.capacidade) {
                this.qdp++;
                return true;
            }else {
                return false;
            }
        }
        public boolean sai() {
            if(this.qdp>this.capacidade) {
                this.qdp--;
                return true; 
            }else {
                return false;
            }
        }
        public boolean sobe() {
            if(this.andarAtual>this.totalDeAndares) {
                this.andarAtual++;
                return true;
            }else {
                return false;
            }
        }
        public boolean desce(int andarAtual, int totalDeAndares) {
            if(this.andarAtual<this.totalDeAndares) {
                this.andarAtual--;
                return true;
            }else {
                return false;
            }
        }
        public int getandarAtual() {
            return andarAtual;
        }
        public int gettotalDeAndares() {
            return totalDeAndares;
        }
        public int getcapacidade() {
            return capacidade;
        }
        public int getqdp() {
            return qdp;
        }
}
